# Pillars Character Generator - Environment Configuration
# Copy this file to .env and fill in the values

# Django Settings
DJANGO_SECRET_KEY=your-secret-key-here-generate-a-new-one
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=your-domain.com,www.your-domain.com
# Set to True if using HTTPS/SSL (enables secure cookies)
DJANGO_USE_HTTPS=False
# Required for form submissions when accessing via IP/domain with port
# Use https:// if you have SSL, http:// otherwise
# IMPORTANT: Include the port number! (e.g., http://192.168.1.100:9066)
# If not set, defaults are auto-generated from ALLOWED_HOSTS for ports 8000, 8765, 9066
DJANGO_CSRF_TRUSTED_ORIGINS=http://your-domain.com:9066,http://your-ip-address:9066

# Default Users (passwords required for deployment)
PILLARS_ADMIN_USERNAME=sam
PILLARS_ADMIN_PASSWORD=your-secure-admin-password
PILLARS_ADMIN_EMAIL=admin@your-domain.com

PILLARS_DM_USERNAME=dm
PILLARS_DM_PASSWORD=your-secure-dm-password
PILLARS_DM_EMAIL=dm@your-domain.com

# Database (optional - defaults to SQLite if not set)
# To use PostgreSQL:
# 1. Install PostgreSQL: sudo apt install postgresql postgresql-contrib
# 2. Create user and database:
#    sudo -u postgres psql -c "CREATE USER pillars WITH PASSWORD 'pillars';"
#    sudo -u postgres psql -c "CREATE DATABASE pillars_db OWNER pillars;"
#    sudo -u postgres psql -c "GRANT ALL PRIVILEGES ON DATABASE pillars_db TO pillars;"
# 3. Uncomment and configure the line below:
# DATABASE_URL=postgres://pillars:pillars@localhost:5432/pillars_db

# Gunicorn Settings
GUNICORN_WORKERS=3
GUNICORN_BIND=127.0.0.1:9066
